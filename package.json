{
  "name": "homey-edgetool",
  "type": "module",
  "displayName": "Homey EdgeTool",
  "publisher": "riaveda-LGE",
  "version": "0.0.2",
  "description": "Edge console for Homey Edge Tool",
  "repository": {
    "type": "git",
    "url": "http://mod.lge.com/hub/riaveda.lim/homey-edgetool-vscode.git"
  },
  "bugs": {
    "url": "http://mod.lge.com/hub/riaveda.lim/homey-edgetool-vscode.git/issues"
  },
  "homepage": "http://mod.lge.com/hub/riaveda.lim/homey-edgetool-vscode.git#readme",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension/main.js",
  "activationEvents": [
    "onView:edgePanel"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "homey-edge",
          "title": "Homey Edge",
          "icon": "media/resources/edge-icon.svg"
        }
      ]
    },
    "views": {
      "homey-edge": [
        {
          "id": "edgePanel",
          "name": "Edge Console",
          "icon": "$(terminal)",
          "type": "webview",
          "retainContextWhenHidden": true
        }
      ]
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format:prettier": "prettier --write \"{src,scripts,media}/**/*.{ts,tsx,js,jsx,css,html,json,md}\"",
    "format": "npm run lint:fix && npm run format:prettier",
    "perf:merge": "node --expose-gc dist/scripts/perf/run-merge-bench.js",
    "vscode:prepublish": "tsc -p . && node -e \"const fs=require('fs'),p=require('path');const copy=(s,d)=>{fs.mkdirSync(d,{recursive:true});for(const f of fs.readdirSync(s)){if(/\\.(html|css|js)$/.test(f))fs.copyFileSync(p.join(s,f),p.join(d,f));}};copy('src/ui/edge-panel','dist/ui/edge-panel');copy('src/ui/log-viewer','dist/ui/log-viewer');copy('src/ui/perf-monitor','dist/ui/perf-monitor');\"",
    "build": "tsc -p . && node -e \"const fs=require('fs'),p=require('path');const copy=(s,d)=>{fs.mkdirSync(d,{recursive:true});for(const f of fs.readdirSync(s)){if(/\\.(html|css|js)$/.test(f))fs.copyFileSync(p.join(s,f),p.join(d,f));}};copy('src/ui/edge-panel','dist/ui/edge-panel');copy('src/ui/log-viewer','dist/ui/log-viewer');copy('src/ui/perf-monitor','dist/ui/perf-monitor');\"",
    "deploy": "npm run build && vsce package",
    "now": "node scripts/now.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.46.0"
  },
  "files": [
    "dist/**",
    "media/**",
    "package.json",
    "LICENSE"
  ]
}
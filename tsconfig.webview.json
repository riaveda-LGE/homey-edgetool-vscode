{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": false,        // 웹뷰 소스의 암시적 any 경고 완화
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@ipc/*": ["src/shared/ipc/*"]
    }
  },
  "include": [
    "src/webviewers/**/*",
    "src/shared/**/*.ts"
  ]
}
